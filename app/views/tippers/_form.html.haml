= form_for @tipper do |f|
  .form-group
    Name:
    = f.text_field :name
  .form-group
    Account Number:
    = f.text_field :account_num

  - if @tipper.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tipper.errors.count, "error")} prohibited this tipper from being saved:"
      %ul
        - @tipper.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit 'Save'
