= form_for @tipee do |f|
  .form-group
    Name:
    = f.text_field :name
  .form-group
    Account Number:
    = f.text_field :account_num
  .form-group
    Merchant:
    = f.select_field :merchant_id
  .form-group
  - if @tipee.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tipee.errors.count, "error")} prohibited this tipee from being saved:"
      %ul
        - @tipee.errors.full_messages.each do |message|
          %li= message

  .actions
    = f.submit 'Save'
